{
    "manifest_version": 3,
    "name": "React Web Page as Homepage",
    "version": "1.0",
    "description": "Make your React app the homepage on Google Chrome",
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "tabs"
    ],
    "chrome_url_overrides": {
      "newtab": "index.html"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  